{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components": ["./src/component/*"],
      "@/application": ["./src/application/*"],
      "@/entities": ["./src/application/entities/*"],
      "@/usecases": ["./src/application/usecases/*"],
      "@/infrastructure": ["./src/infrastructure/*"],
      "@/interface": ["./src/infrastructure/interface/*"],
      "@/api": ["./src/api/*"],
      "@/hooks": ["./src/hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "postcss.config.js", "next.config.js"],
  "exclude": ["node_modules"]
}
